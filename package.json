{
  "name": "nitro-template",
  "type": "module",
  "scripts": {
    "dev": "cross-env APP_ENV=dev nitro dev",
    "build": "cross-env APP_ENV=prod nitro build",
    "start": "node .output/server/index.mjs",
    "db:create": "mikro-orm-esm schema:create --run",
    "db:update": "mikro-orm-esm schema:update --run",
    "db:drop": "mikro-orm-esm schema:drop --run",
    "db:fresh": "mikro-orm-esm schema:fresh --run",
    "lint": "eslint src --fix",
    "types": "nitro prepare"
  },
  "dependencies": {
    "@mikro-orm/core": "^6.3.13",
    "@mikro-orm/mysql": "^6.3.13",
    "c12": "^2.0.1",
    "jsonwebtoken": "^9.0.2",
    "nanoid": "^5.0.8",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.12.0",
    "@mikro-orm/cli": "^6.3.13",
    "@stylistic/eslint-plugin": "^2.9.0",
    "@types/eslint__js": "^8.42.3",
    "@types/jsonwebtoken": "^9.0.7",
    "cross-env": "^7.0.3",
    "eslint": "^9.12.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "nitropack": "latest",
    "ts-node": "^10.9.2",
    "typescript-eslint": "^8.8.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
